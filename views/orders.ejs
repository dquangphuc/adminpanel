<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách đơn hàng</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Danh sách đơn hàng</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>ID Đặt Hàng</th>
                    <th>Ngày</th>
                    <th>Thành Tiền</th>
                    <th>ID Khách Hàng</th>
                    <th>Tên Khách Hàng</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.orderid %></td>
                        <td><%= order.date %></td>
                        <td><%= order.totalprice.toLocaleString('vi-VN') %> VND</td>
                        <td><%= order.userid %></td>
                        <td><%= order.name %></td>
                        <td>
                            <form action="/delete-order/<%= order.orderid %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                            </form>
                            <a href="/order/<%= order.orderid %>" class="btn btn-info btn-sm">Xem chi tiết</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Nút Quay về Bảng điều khiển -->
        <div class="mt-4 text-center">
            <a href="/dashboard" class="btn btn-secondary">Quay về Bảng điều khiển</a>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
