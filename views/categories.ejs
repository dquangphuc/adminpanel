<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Danh Mục</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-4">Quản Lý Danh Mục</h1>
                
                <!-- Hiển thị thông báo nếu không có danh mục -->
                <% if (message) { %>
                    <div class="alert alert-warning">
                        <%= message %>
                    </div>
                <% } %>

                <div class="card mb-4">
                    <div class="card-header">
                        <a href="/add-category" class="btn btn-primary">Thêm Danh Mục Mới</a>
                    </div>
                    
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Mã Danh Mục</th>
                                    <th>Tên Danh Mục</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(function(category) { %>
                                    <tr>
                                        <!-- Thay đổi từ category.name sang category.catename -->
                                        <td><%= category.cateid %></td>
                                        <td><%= category.catename %></td>
                                        <td>
                                            <a href="/edit-category/<%= category.cateid %>" class="btn btn-sm btn-warning">Sửa</a>
                                            <a href="/delete-category/<%= category.cateid %>" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?')">Xóa</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="/dashboard" class="btn btn-secondary">Quay Lại Bảng Điều Khiển</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>